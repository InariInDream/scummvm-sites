= form_for @engine do |f|
  - if @engine.errors.any?
    #error_explanation
      %h2= "#{pluralize(@engine.errors.count, "error")} prohibited this engine from being saved:"
      %ul
        - @engine.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :code
    = f.text_field :code

  .actions
    = f.submit 'Save'
