= form_for @release do |f|
  - if @release.errors.any?
    #error_explanation
      %h2= "#{pluralize(@release.errors.count, "error")} prohibited this release from being saved:"
      %ul
        - @release.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :release_date
    = f.text_field :release_date
    %span.help-block
      Expected format for date is YYYY-MM-DD
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
